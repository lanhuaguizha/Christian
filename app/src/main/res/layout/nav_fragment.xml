<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurView
        android:elevation="@dimen/bottom_navigation_view_elevation"
        android:layout_marginTop="@dimen/action_bar_height"
        android:id="@+id/bv_tabs_nav"
        app:layout_behavior="com.christian.view.TabLayoutBehavior"
        tools:targetApi="lollipop"
        android:visibility="gone"
        android:outlineProvider="bounds"
        app:blurOverlayColor="@color/colorOverlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_nav"
            android:layout_width="match_parent"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:tabMode="scrollable" />
    </eightbitlab.com.blurview.BlurView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.christian.view.ContextMenuRecyclerView
            android:id="@+id/rv_nav"
            android:scrollbarSize="@dimen/search_bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.christian.index.FastScroller
        android:id="@+id/fs_nav"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/search_margin_horizontal"
        android:layout_marginBottom="@dimen/search_margin_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>